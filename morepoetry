#Using various tools to help generate text for the poem
from textblob import TextBlob
import random
import pycorpora
import pronouncing

random.choice(pycorpora.mythology.greek_myth_masters["mythology"])
template = """If {0} profane with unworthiest hand
This holy shrine, the gentle fine is this:
{1} lips, two blushing pilgrims, ready stand
To smooth that rough touch with a tender kiss."""

#Random mythological characters
mythology_1 = random.choice(pycorpora.mythology.greek_myth_masters["mythology"])
mythology_2 = random.choice(pycorpora.mythology.greek_myth_masters["mythology"])

arrange = template.format(mythology_1, mythology_2)
print (arrange)
